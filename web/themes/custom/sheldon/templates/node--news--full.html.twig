<div id="node-{{ node.id }}"{{ attributes.addClass('static') }}>
  <div class="grid-set">
    <div class="grid-col">
      <h2 class="tab-heading">News</h2>
    </div>
  </div>
  <div class="grid-set">
    <div class="bp591-grid-col-two-thirds sticky-reference">

      {{ title_prefix }}
      {% if label and not page %}
        <h1{{ title_attributes }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h1>
      {% else %}
        <h1 id="main_desc"{{ title_attributes }}>{{ label }}</h1>
      {% endif %}
      {{ title_suffix }}

      {% if display_submitted %}
        <div class="submitted">
          {{ author_picture }}
          <div{{ author_attributes }}>
            {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
            {{ metadata }}
          </div>
        </div>
      {% endif %}

      <div class="content"{{ content_attributes }}>
        {{ content }}
      </div>

  </div>
  <div class="bp591-grid-col-one-third">
    <div class="sticky">
      <nav role="navigation" aria-labelledby="sectionnav-desc">
        {{ drupal_region('sidebar') }}
      </nav>
    </div>
  </div>
</div>
